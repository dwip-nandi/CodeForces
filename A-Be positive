#include<bits/stdc++.h>
using namespace std;
int main(){
   int t;
   cin>>t;
   while(t--){
      int n;
      cin >> n;
      vector<int>v(n);
      int z=0,m=0;
      for(int i=0;i<n;i++){
          cin>>v[i];
          if(v[i]==0)z++;
          if(v[i]== -1)m++;
      }
      if(m%2==0)cout<<z<<endl;
      else cout<<z+2<<endl;
   }

}
