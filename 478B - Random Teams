#include<bits/stdc++.h>
using namespace std;
#define int long long
signed main() {
    int n,m;
    cin>>n>>m;

    int d=n/m;
    int x=n%m;
    int y=m-x;

    //cout<<y<<endl;
    int k1=y*d*(d-1);
    int k2=x*(d+1)*d;
    int k3=(n-m+1)*(n-m);
    
    if(n%m==0) cout<<m*d*(d-1)/2<<' '<<k3/2 <<endl;
    else cout<<(k1+k2)/2<<' '<<k3/2<<endl;
}
